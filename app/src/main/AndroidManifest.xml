<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CampusSync"
        tools:targetApi="31">

        <!-- Launcher / entry activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Student dashboard -->
        <activity
            android:name=".StudentDashboardActivity"
            android:exported="false" />

        <!-- Admin dashboard -->
        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false" />

        <!-- Teacher dashboard -->
        <activity
            android:name=".TeacherDashboardActivity"
            android:exported="false" />

        <!-- Attendance / Timetable screens -->
        <activity
            android:name=".attendance.ManageAttendanceActivity"
            android:exported="false" />
        <activity
            android:name=".attendance.StudentSummaryActivity"
            android:exported="false" />
        <activity
            android:name=".attendance.StudentAttendanceActivity"
            android:exported="false" />

        <activity
            android:name=".timetable.StudentTimetableActivity"
            android:exported="false" />
        <activity
            android:name=".timetable.ManageTimetableActivity"
            android:exported="false" />

        <!-- ================= ASSIGNMENT MODULE ACTIVITIES ================= -->

        <!-- Student: view assignments (available/submitted/pending) -->
        <!-- ðŸ”¥ Add this activity -->
        <activity
            android:name=".assignment.StudentAssignmentsActivity"
            android:exported="false"
            android:theme="@style/Theme.CampusSync" />

        <!-- Find & FIX this activity declaration -->
        <activity
            android:name=".assignment.AdminAssignmentActivity"
            android:exported="false" />


        <activity
            android:name=".assignment.TeacherAssignmentsActivity"
            android:exported="false" />

        <activity
            android:name=".assignment.AssignmentSubmissionsActivity"
            android:exported="false" />



        <!-- ===================LMS Activities============================================= -->
        <activity
            android:name=".lms.StudentLmsActivity"
            android:exported="false"
            android:label="Class Notes" />

        <activity
            android:name=".lms.TeacherLmsActivity"
            android:exported="false"
            android:label="Manage Notes" />

        <activity
            android:name=".lms.UploadNoteActivity"
            android:exported="false"
            android:label="Upload Note" />

        <!-- Add any other activities here -->

    </application>
</manifest>
