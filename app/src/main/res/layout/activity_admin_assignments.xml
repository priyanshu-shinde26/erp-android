        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- ðŸ”¥ Delete Button -->
        <com.google.android.material.button.MaterialButton
