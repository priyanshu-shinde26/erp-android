<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_student_assignments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assignment.StudentAssignmentsActivity">

    <!-- ðŸ”¥ Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_student_assignments"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="ðŸ“š Assignments"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleTextColor="@android:color/white" />

    <!-- ðŸ”¥ Content -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- ðŸ”¥ Header -->
        <TextView
            android:id="@+id/tv_student_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“š Your Assignments"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textColor="?attr/colorOnPrimaryContainer" />

        <!-- ðŸ”¥ Class Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/tv_student_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="12dp"
            android:text="ðŸ‘¥ Class"
            android:textSize="14sp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            app:chipBackgroundColor="#E3F2FD"
            app:chipStrokeColor="#2196F3"
            app:chipStrokeWidth="1dp"
            app:chipCornerRadius="16dp" />

        <!-- ðŸ”¥ Progress -->
        <ProgressBar
            android:id="@+id/progress_student_assignments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="32dp"
            android:visibility="gone" />

        <!-- ðŸ”¥ Empty State -->
        <LinearLayout
            android:id="@+id/tv_student_assignments_empty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_assignment_outlined"
                android:contentDescription="@string/no_assignments_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“­ No assignments yet"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ… You're all caught up!\nðŸ”” Your teachers will post assignments soon"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- ðŸ”¥ Assignment List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_student_assignments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="4dp"
            android:overScrollMode="never"
            tools:listitem="@layout/item_student_assignment"
            tools:visibility="gone" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
