<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_assignment_submissions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assignment.AssignmentSubmissionsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_assignment_submissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:title="Submissions"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:id="@+id/tv_assignment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment: Java Assignment 1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progress_assignment_submissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_assignment_submissions_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No submissions yet."
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_assignment_submissions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_submission" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
