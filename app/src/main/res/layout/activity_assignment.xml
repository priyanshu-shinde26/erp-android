<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutAssignments"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAssignments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Assignments"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@android:drawable/ic_menu_revert" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- optional filter row -->
        <LinearLayout
            android:id="@+id/layoutFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/txtFilterClass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Class: CSE-2" />

            <TextView
                android:id="@+id/txtRoleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAssignments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No assignments yet."
            android:gravity="center"
            android:visibility="gone"
            android:padding="16dp" />
    </LinearLayout>

    <!-- FAB for teacher/admin only -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddAssignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        app:layout_anchor="@id/layoutAssignments"
        app:layout_anchorGravity="bottom|end"
        android:layout_margin="16dp"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
