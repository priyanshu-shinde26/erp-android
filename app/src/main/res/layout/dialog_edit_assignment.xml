<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ðŸ“ Assignment Title (UNCHANGED) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ“ Assignment Title"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorPrimary"
            app:startIconDrawable="@android:drawable/ic_menu_edit">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ðŸ“„ Description (UNCHANGED) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="ðŸ“„ Description (optional)"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="2"
                android:maxLines="4"
                android:gravity="top|start" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ðŸ‘¥ CLASS SPINNER (NEW - REPLACES et_class_id) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ‘¥ Class"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp" />

                <Spinner
                    android:id="@+id/spinner_class"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ“š Subject (UNCHANGED) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="ðŸ“š Subject"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorPrimary"
            app:startIconDrawable="@android:drawable/ic_menu_agenda"
            app:helperText="Example: JAVA, Mathematics">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ðŸ“… Due Date (UNCHANGED) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="ðŸ“… Due Date"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/colorPrimary"
            app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
            app:helperText="Tap to select date">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ðŸ’¡ Info Note (UNCHANGED) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ðŸ’¡ After creating, upload question PDF from list"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>
