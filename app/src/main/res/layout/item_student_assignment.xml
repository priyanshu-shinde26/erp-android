<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_student_assignment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- ðŸ”¥ Top row: title + status chip -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Java Assignment 1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- ðŸ”¥ Status Chip -->
            <TextView
                android:id="@+id/tv_status_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Submitted"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/bg_status_chip_neutral"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- ðŸ”¥ Subject + due date row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subject: JAVA"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due: 31 Dec 2025"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <!-- ðŸ”¥ Description -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write OOPS concepts with examples."
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

        <!-- ðŸ”¥ GRADE BLOCK (Animated appearance) -->
        <LinearLayout
            android:id="@+id/layout_grade_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="@drawable/bg_grade_block"
            android:visibility="gone"
            android:elevation="2dp"
            tools:visibility="visible">

            <!-- ðŸ”¥ Grade Badge (Green pill) -->
            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="â­ 85/100"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_grade_badge"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:elevation="2dp" />

            <!-- ðŸ”¥ Teacher Feedback -->
            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Great work! Keep practicing the concepts."
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- ðŸ”¥ Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <!-- ðŸ”¥ View Question Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_question"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“„ View Question"
                android:layout_marginEnd="8dp" />

            <!-- ðŸ”¥ Submit Button (Dynamic text) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit_pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¤ Submit PDF" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
