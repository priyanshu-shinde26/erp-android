<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_teacher_assignments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assignment.TeacherAssignmentsActivity">

    <!-- ðŸ”¥ Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_teacher_assignments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:title="Assignments"

        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- ðŸ”¥ Main Content -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- ðŸ”¥ 1. Main Header -->
        <TextView
            android:id="@+id/tv_assignments_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“š Assignment Manager"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="24dp"
            android:textColor="?attr/colorOnSurface"
            android:letterSpacing="0.05" />

        <!-- ðŸ”¥ 2. Class Display Chip -->
        <TextView
            android:id="@+id/tv_teacher_class_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="ðŸ‘¥ Select a class to begin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:elevation="4dp" />

        <!-- ðŸ”¥ 3. Class Filter Spinner -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ‘¥ Class"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp" />

                <Spinner
                    android:id="@+id/spinner_class_filter"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ”¥ 4. Loading Progress -->
        <ProgressBar
            android:id="@+id/progress_teacher_assignments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="24dp"
            android:visibility="gone" />

        <!-- ðŸ”¥ 5. Smart Empty State -->
        <TextView
            android:id="@+id/tv_teacher_assignments_empty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="ðŸŽ¯ Welcome Teacher!

ðŸ‘† Select your class from dropdown
âž• Tap + to create assignment
ðŸ“± View submissions &amp; grade

âœ¨ Ready when you are!"
            android:gravity="center"
            android:textAlignment="center"
            android:padding="40dp"
            android:visibility="visible"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            tools:visibility="visible" />

        <!-- ðŸ”¥ 6. Assignments RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_teacher_assignments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="8dp"
            android:visibility="gone"
            tools:listitem="@layout/item_teacher_assignment"
            tools:visibility="gone" />

    </LinearLayout>

    <!-- ðŸ”¥ FAB - Always accessible -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_assignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/add_assignment"
        app:fabSize="normal"
        app:tint="?attr/colorOnPrimary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
